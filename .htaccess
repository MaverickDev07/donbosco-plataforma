<ifModule mod_rewrite.c>
	# ----------------------------------------------------------------------
	# Activar RewriteEngine
	# ----------------------------------------------------------------------
	RewriteEngine on
	# ----------------------------------------------------------------------
	# Eliminar index.php
	# ----------------------------------------------------------------------
	 RewriteEngine On
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteCond $1 !^(index\.php|robots\.txt|sitemap\.xml|assets|tcpdf|public)
	RewriteRule ^(.*)$ index.php?/$1 [L]
</ifModule>
